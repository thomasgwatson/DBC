<div>
  <%= @event.errors.full_messages if @event %>
  <form action="/events/create" method="post">
    Event title: <input type="text" name="title" placeholder="Add the title of your event"  value= <%="'#{@event.title}'" if @event%>> <br>
    Organizer's name: <input type="text" name="organizer_name" placeholder="Joey Joe Joe for example" value= <%="'#{@event.organizer_name}'" if @event%>> <br>
    Organizer's email: <input type="email" name="organizer_email" placeholder="Add your email" value= <%="#{@event.organizer_email}" if @event%>> <br>
    Date: <input type="date" name="date" placeholder="What date is the event?" value= <%="#{@event.date}" if @event%>> <br>
    <input type="submit" value="Save">
  </form>

</div>
